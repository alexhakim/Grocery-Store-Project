<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coen390team11.GSAAPP">

    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryStoreAndroidApplication">
        <activity
            android:name="com.coen390team11.GSAAPP.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.coen390team11.GSAAPP.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.coen390team11.GSAAPP.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.coen390team11.GSAAPP.AfterLogin"
            android:exported="true" />
        <activity
            android:name="com.coen390team11.GSAAPP.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>